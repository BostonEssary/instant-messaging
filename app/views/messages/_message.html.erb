<div class="" id=<%= dom_id(message) %>>
  <div class="flex items-center user_<%= message.sender_id %>">
    <% if message.sender.avatar.presence && previous_message&.sender != message.sender %>
      <%= image_tag url_for(message.sender.avatar.variant(:small_thumb)), class: "rounded-full border-2 border-black" %>
    <% end %>
    <div class="text-wrap">
      <div class="flex m-2 items-center gap-2">
        <% if previous_message&.sender != message.sender %>
          <div class="text-xl">
            <%= message.sender.username %>
          </div>
        <% end %>

      </div>
      <div class="message w-72">
        <%= render 'messages/message_images', message: %>
        <div class="w-fit p-2 rounded m-2 bg-white flow-text break-all">
          <%= message.body %>
        </div>
        <% unless message.deleted %>
          <p class="text-xs font-thin m-2"> <%= message.formatted_created_at %> </p>
        <% end %>
      </div>

    </div>
  </div>
</div>