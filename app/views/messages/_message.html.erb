<div id=<%= dom_id(message) %>>
  <div class="ml-auto w-fit m-2">
    <div class="bg-purple-300 ml-auto w-fit p-2 rounded ">
      <%= message.body %>
    </div>
    <div class="font-thin text-xs">
      <% unless message.deleted %>
        <%= message.formatted_created_at %>
      <% end %>
    </div>
  </div>


</div>